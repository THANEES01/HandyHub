<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Write a Review - HandyHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            width: 100%;
            overflow-x: hidden;
        }
        
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: 10px;
        }
        
        .content-wrapper {
            flex: 1 0 auto;
            width: 100%;
            padding-top: 50px;
        }
        
        .footer-wrapper {
            flex-shrink: 0;
            width: 100vw;
            margin-top: auto;
            left: 0;
            right: 0;
            max-width: none;
            padding-left: 0;
            padding-right: 0;
        }
        
        .review-container {
            max-width: 800px;
            margin: 10px auto;
            padding-top: 20px;
        }
        
        .review-header {
            background-color: var(--primary-blue);
            color: white;
            padding: 30px;
            border-radius: 15px 15px 0 0;
            margin-bottom: 0;
            position: relative;
            overflow: hidden;
        }
        
        .review-header .header-icon {
            position: absolute;
            right: -20px;
            bottom: -20px;
            font-size: 8rem;
            opacity: 0.1;
            transform: rotate(15deg);
        }
        
        .review-content {
            background-color: white;
            padding: 30px;
            border-radius: 0 0 15px 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        }
        
        .booking-details {
            margin-top: 30px;
        }
        
        .details-section {
            margin-bottom: 25px;
            padding-bottom: 25px;
            border-bottom: 1px solid #eee;
        }
        
        .details-section:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }
        
        .details-heading {
            font-size: 1.25rem;
            color: var(--primary-blue);
            margin-bottom: 15px;
            font-weight: 600;
        }
        
        .detail-item {
            display: flex;
            margin-bottom: 10px;
        }
        
        .detail-label {
            width: 180px;
            font-weight: 500;
            color: var(--dark-blue);
        }
        
        .detail-value {
            flex-grow: 1;
        }
        
        .action-buttons {
            margin-top: 30px;
            display: flex;
            gap: 15px;
        }
        
        .action-buttons .btn {
            flex: 1;
            padding: 12px 15px;
        }
        
        .btn-cancel {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            color: #6c757d;
        }
        
        .btn-submit {
            background-color: var(--primary-blue);
            color: white;
        }
        
        .btn-submit:hover {
            background-color: var(--dark-blue);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 119, 190, 0.3);
        }
        
        .back-link {
            color: var(--primary-blue);
            text-decoration: none;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }
        
        .back-link:hover {
            color: var(--secondary-blue);
            text-decoration: none;
            transform: translateX(-5px);
        }
        
        /* Star Rating styles - keeping the original functionality */
        .rating-container {
            background: #f8f9fa;
            padding: 30px;
            border-radius: 12px;
            margin-bottom: 30px;
            text-align: center;
            border: 1px solid #e9ecef;
        }
        
        .rating-title {
            color: var(--dark-blue);
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 20px;
        }
        
        .rating-labels {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
            padding: 0 20px;
        }
        
        .rating-labels span {
            color: #6c757d;
            font-size: 0.85rem;
            font-weight: 500;
        }
        
        .star-rating {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 15px;
            margin: 20px 0;
        }
        
        .star-rating input {
            display: none;
        }
        
        .star-rating label {
            font-size: 3rem;
            color: #e9ecef;
            cursor: pointer;
            transition: all 0.3s ease;
            padding: 5px;
        }
        
        .star-rating label:hover {
            transform: scale(1.2);
            color: #ffc107;
            filter: drop-shadow(0 0 8px rgba(255, 193, 7, 0.5));
        }
        
        .star-rating label.selected {
            color: #ffc107;
            animation: starPulse 0.5s ease;
        }
        
        @keyframes starPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
        
        .rating-feedback {
            background: var(--primary-blue);
            color: white;
            padding: 12px 25px;
            border-radius: 25px;
            font-weight: 600;
            opacity: 0;
            transform: translateY(10px);
            transition: all 0.3s ease;
            display: inline-block;
            margin-top: 15px;
        }
        
        .rating-feedback.show {
            opacity: 1;
            transform: translateY(0);
        }
        
        .form-group {
            margin-bottom: 25px;
        }
        
        .form-label {
            color: var(--dark-blue);
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }
        
        .form-control {
            border: 2px solid #e9ecef;
            border-radius: 8px;
            padding: 12px 16px;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }
        
        .form-control:focus {
            border-color: var(--primary-blue);
            box-shadow: 0 0 0 3px rgba(0, 119, 190, 0.1);
            outline: none;
        }
        
        .char-counter {
            text-align: right;
            font-size: 0.85rem;
            color: #6c757d;
            margin-top: 5px;
        }
        
        .recommend-section {
            background: #e6f2ff;
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 30px;
        }
        
        .form-check {
            display: flex;
            align-items: center;
            gap: 15px;
        }
        
        .form-check-input {
            width: 25px;
            height: 25px;
        }
        
        .form-check-label {
            color: var(--dark-blue);
            font-weight: 500;
            font-size: 1.1rem;
        }
        
        .review-tips {
            background: #f8f9fa;
            padding: 25px;
            border-radius: 12px;
            margin-top: 30px;
            border-left: 4px solid var(--primary-blue);
        }
        
        .review-tips h6 {
            color: var(--dark-blue);
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .review-tips ul {
            margin: 0;
            padding-left: 25px;
        }
        
        .review-tips li {
            color: #6c757d;
            font-size: 0.95rem;
            margin-bottom: 8px;
            line-height: 1.6;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <%- include('../partials/navbar') %>

    <div class="content-wrapper">
        <div class="container mt-5 mb-5">
            <a href="/customer/bookings" class="back-link">
                <i class="bi bi-arrow-left"></i> Back to My Bookings
            </a>
            
            <div class="review-container">
                <% if (locals.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <%= error %>
                    </div>
                <% } %>
                
                <div class="review-header">
                    <h2><i class="bi bi-star-fill me-2"></i> Write a Review</h2>
                    <p class="mb-0">Share your experience with this service provider</p>
                    <div class="header-icon">
                        <i class="bi bi-star-fill"></i>
                    </div>
                </div>
                
                <div class="review-content">
                    <!-- Booking Info -->
                    <div class="booking-details">
                        <div class="details-section">
                            <h3 class="details-heading">Service Details</h3>
                            <div class="detail-item">
                                <div class="detail-label">Provider:</div>
                                <div class="detail-value"><%= booking.provider_name %></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Service Type:</div>
                                <div class="detail-value"><%= booking.service_type %></div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Service Date:</div>
                                <div class="detail-value">
                                    <%= new Date(booking.preferred_date).toLocaleDateString('en-US', {
                                        weekday: 'long',
                                        year: 'numeric',
                                        month: 'long',
                                        day: 'numeric'
                                    }) %>
                                </div>
                            </div>
                            <div class="detail-item">
                                <div class="detail-label">Booking ID:</div>
                                <div class="detail-value">#<%= booking.id %></div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Review Form -->
                    <form action="/customer/submit-review" method="POST" id="reviewForm">
                        <input type="hidden" name="booking_id" value="<%= booking.id %>">
                        <input type="hidden" name="provider_id" value="<%= booking.provider_id %>">
                        
                        <!-- Star Rating -->
                        <div class="rating-container">
                            <div class="rating-title">How would you rate this service?</div>
                            <div class="rating-labels">
                                <span>Poor</span>
                                <span>Fair</span>
                                <span>Good</span>
                                <span>Very Good</span>
                                <span>Excellent</span>
                            </div>
                            <div class="star-rating">
                                <input type="radio" id="star1" name="rating" value="1" required>
                                <label for="star1" title="1 star - Poor" data-rating="Poor">
                                    <i class="bi bi-star-fill"></i>
                                </label>
                                
                                <input type="radio" id="star2" name="rating" value="2">
                                <label for="star2" title="2 stars - Fair" data-rating="Fair">
                                    <i class="bi bi-star-fill"></i>
                                </label>
                                
                                <input type="radio" id="star3" name="rating" value="3">
                                <label for="star3" title="3 stars - Good" data-rating="Good">
                                    <i class="bi bi-star-fill"></i>
                                </label>
                                
                                <input type="radio" id="star4" name="rating" value="4">
                                <label for="star4" title="4 stars - Very Good" data-rating="Very Good">
                                    <i class="bi bi-star-fill"></i>
                                </label>
                                
                                <input type="radio" id="star5" name="rating" value="5">
                                <label for="star5" title="5 stars - Excellent" data-rating="Excellent">
                                    <i class="bi bi-star-fill"></i>
                                </label>
                            </div>
                            <div class="rating-feedback" id="ratingFeedback"></div>
                        </div>
                        
                        <!-- Review Text -->
                        <div class="form-group">
                            <label for="reviewText" class="form-label">Share your experience</label>
                            <textarea 
                                class="form-control" 
                                id="reviewText" 
                                name="review_text" 
                                rows="5" 
                                placeholder="Describe your experience with this service provider. How was the quality of work? Was the provider professional and on time? Would you recommend them to others?"></textarea>
                            <div class="char-counter" id="charCounter">0 characters</div>
                        </div>
                        
                        <!-- Recommendation -->
                        <div class="recommend-section">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="recommend" name="recommend" value="1">
                                <label class="form-check-label" for="recommend">
                                    <i class="bi bi-hand-thumbs-up me-2"></i>
                                    I would recommend this service provider to others
                                </label>
                            </div>
                        </div>
                        
                        <!-- Buttons -->
                        <div class="action-buttons">
                            <a href="/customer/bookings" class="btn btn-cancel">
                                <i class="bi bi-x-lg me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-submit">
                                <i class="bi bi-send me-1"></i>Submit Review
                            </button>
                        </div>
                    </form>
                    
                    <!-- Review Tips -->
                    <div class="review-tips">
                        <h6>
                            <i class="bi bi-lightbulb-fill"></i>
                            Tips for writing a helpful review:
                        </h6>
                        <ul>
                            <li>Be specific about what aspects of the service you liked or disliked</li>
                            <li>Mention if the provider was punctual and professional</li>
                            <li>Comment on the quality of work performed</li>
                            <li>Share if the provider communicated well throughout the process</li>
                            <li>Be honest and fair in your assessment</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-wrapper">
        <!-- Footer -->
        <%- include('../partials/footer') %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Star rating functionality
            const stars = document.querySelectorAll('.star-rating label');
            const starInputs = document.querySelectorAll('.star-rating input');
            const ratingFeedback = document.getElementById('ratingFeedback');
            
            // Function to highlight stars up to a certain rating
            function highlightStars(rating) {
                stars.forEach((star, index) => {
                    const starValue = parseInt(star.getAttribute('for').replace('star', ''));
                    const starIcon = star.querySelector('i');
                    
                    // Remove existing classes
                    star.classList.remove('selected');
                    
                    if (starValue <= rating) {
                        starIcon.style.color = 'var(--accent-yellow, #ffc107)';
                        star.style.transform = 'scale(1.1)';
                    } else {
                        starIcon.style.color = 'var(--gray-medium, #e9ecef)';
                        star.style.transform = 'scale(1)';
                    }
                });
            }
            
            // Reset all stars
            function resetStars() {
                stars.forEach(star => {
                    const starIcon = star.querySelector('i');
                    starIcon.style.color = 'var(--gray-medium, #e9ecef)';
                    star.style.transform = 'scale(1)';
                    star.classList.remove('selected');
                });
            }
            
            // Add event listeners for hover and click effects
            stars.forEach((star, index) => {
                star.addEventListener('mouseenter', function() {
                    const rating = parseInt(this.getAttribute('for').replace('star', ''));
                    highlightStars(rating);
                    
                    // Show rating text
                    const ratingText = this.getAttribute('data-rating');
                    ratingFeedback.textContent = `${ratingText}`;
                    ratingFeedback.classList.add('show');
                });
                
                star.addEventListener('click', function() {
                    const rating = parseInt(this.getAttribute('for').replace('star', ''));
                    const ratingText = this.getAttribute('data-rating');
                    
                    // Select the radio button
                    document.getElementById(`star${rating}`).checked = true;
                    
                    // Visual feedback
                    stars.forEach(s => s.classList.remove('selected'));
                    for (let i = 1; i <= rating; i++) {
                        document.querySelector(`label[for="star${i}"]`).classList.add('selected');
                    }
                    
                    highlightStars(rating);
                    ratingFeedback.textContent = `You selected: ${ratingText}`;
                    ratingFeedback.classList.add('show');
                });
            });
            
            // Reset stars when mouse leaves the rating area
            document.querySelector('.star-rating').addEventListener('mouseleave', function() {
                const checkedInput = document.querySelector('.star-rating input:checked');
                if (checkedInput) {
                    const rating = parseInt(checkedInput.value);
                    const selectedStar = document.querySelector(`label[for="star${rating}"]`);
                    const ratingText = selectedStar.getAttribute('data-rating');
                    
                    highlightStars(rating);
                    ratingFeedback.textContent = `You selected: ${ratingText}`;
                    ratingFeedback.classList.add('show');
                } else {
                    resetStars();
                    ratingFeedback.classList.remove('show');
                }
            });
            
            // Character counter
            const reviewTextArea = document.getElementById('reviewText');
            const charCounter = document.getElementById('charCounter');
            
            function updateCharCount() {
                const current = reviewTextArea.value.length;
                charCounter.textContent = `${current} characters`;
                
                if (current < 10) {
                    charCounter.className = 'char-counter warning';
                } else if (current > 500) {
                    charCounter.className = 'char-counter error';
                    charCounter.textContent += ' (too long - please keep it concise)';
                } else {
                    charCounter.className = 'char-counter success';
                }
            }
            
            reviewTextArea.addEventListener('input', updateCharCount);
            updateCharCount();
            
            // Form validation
            const reviewForm = document.getElementById('reviewForm');
            reviewForm.addEventListener('submit', function(e) {
                const rating = document.querySelector('input[name="rating"]:checked');
                const reviewText = reviewTextArea.value.trim();
                
                if (!rating) {
                    e.preventDefault();
                    
                    // Highlight the rating section
                    const ratingContainer = document.querySelector('.rating-container');
                    ratingContainer.style.animation = 'shake 0.5s ease';
                    ratingContainer.style.borderColor = '#dc3545';
                    
                    setTimeout(() => {
                        ratingContainer.style.animation = '';
                        ratingContainer.style.borderColor = '';
                    }, 1000);
                    
                    alert('Please select a rating before submitting your review.');
                    return;
                }
                
                if (reviewText.length < 10) {
                    e.preventDefault();
                    reviewTextArea.style.borderColor = '#dc3545';
                    reviewTextArea.focus();
                    
                    setTimeout(() => {
                        reviewTextArea.style.borderColor = '';
                    }, 2000);
                    
                    alert('Please write at least 10 characters for your review.');
                    return;
                }
                
                // Show loading state
                const submitBtn = document.querySelector('.btn-submit');
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Submitting...';
                submitBtn.disabled = true;
                
                // Log form data for debugging
                console.log('Submitting form with data:', {
                    booking_id: document.querySelector('input[name="booking_id"]').value,
                    provider_id: document.querySelector('input[name="provider_id"]').value,
                    rating: rating.value,
                    review_text: reviewText
                });
            });
        });
        
        // Add shake animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                25% { transform: translateX(-5px); }
                75% { transform: translateX(5px); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>