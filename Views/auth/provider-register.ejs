            const daysOfWeek = ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'];
            daysOfWeek.forEach(day => {
                toggleDayAvailability(day);
            });

            // Form validation and submission
            const form = document.getElementById('providerRegistrationForm');
            debugLog('Form element found:', form !== null);
            
            if (form) {
                form.addEventListener('submit', function(e) {
                    debugLog('Form submission started');
                    const password = document.querySelector('input[name="password"]').value;
                    const confirmPassword = document.querySelector('input[name="confirmPassword"]').value;
                    const categories = document.querySelectorAll('input[name="serviceCategories[]"]:checked');
                    const servicesArray = Array.from(services).filter(Boolean);
                    
                    let isValid = true;
                    let errorMessage = '';
                    
                    // Update the hidden services input one last time before submission
                    document.getElementById('servicesInput').value = JSON.stringify(servicesArray);
                    
                    // Force validation of all fields before submission
                    formFields.forEach(field => {
                        const element = document.getElementById(field.id);
                        if (element) {
                            markFieldAsTouched(field.name);
                            if (field.name === 'password') {
                                validatePassword(element, true);
                            } else if (field.name === 'confirmPassword') {
                                validatePasswordMatch(element, true);
                            } else if (field.name === 'certification') {
                                validateFile(element, true);
                            } else {
                                validateField(element, true);
                            }
                        }
                    });
                    
                    // VALIDATION CHECKS
                    
                    // 1. Validate categories
                    if (categories.length === 0) {
                        isValid = false;
                        errorMessage = 'Please select at least one service category';
                        debugLog('Validation failed: No categories selected');
                    }

                    // 2. Validate services
                    if (servicesArray.length === 0) {
                        isValid = false;
                        errorMessage = errorMessage || 'Please add at least one service';
                        debugLog('Validation failed: No services added');
                    }
                    
                    // 3. Validate base fees are set
                    if (!validateFees()) {
                        isValid = false;
                        errorMessage = errorMessage || 'Please set a base fee for all selected categories';
                    }

                    // 4. Validate passwords
                    if (password !== confirmPassword) {
                        isValid = false;
                        errorMessage = errorMessage || 'Passwords do not match';
                        debugLog('Validation failed: Passwords do not match');
                    }

                    if (password.length < 8) {
                        isValid = false;
                        errorMessage = errorMessage || 'Password must be at least 8 characters long';
                        debugLog('Validation failed: Password too short');
                    }
                    
                    // 5. Validate file upload
                    const certificationFile = document.querySelector('input[name="certification"]');
                    if (certificationFile && certificationFile.files.length === 0) {
                        isValid = false;
                        errorMessage = errorMessage || 'Please upload your certification file';
                        debugLog('Validation failed: No certification file selected');
                    } else if (certificationFile && certificationFile.files[0]) {
                        const file = certificationFile.files[0];
                        const maxSize = 1024 * 1024; // 1MB
                        if (file.size > maxSize) {
                            isValid = false;
                            errorMessage = errorMessage || 'File size must be less than 1MB';
                            debugLog('Validation failed: File too large');
                        }
                    }

                    // 6. Validate coverage areas
                    if (selectedCoverageAreas.length === 0) {
                        isValid = false;
                        errorMessage = errorMessage || 'Please select at least one coverage area';
                        debugLog('Validation failed: No coverage areas selected');
                    }

                    // 7. Validate availability - ensure at least one day is selected
                    const availableDaysChecked = document.querySelectorAll('input[name="availableDays"]:checked');
                    if (availableDaysChecked.length === 0) {
                        isValid = false;
                        errorMessage = errorMessage || 'Please select at least one available day';
                        debugLog('Validation failed: No available days selected');
                    }

                    // 8. Validate all required fields
                    const allValidationsPassed = Object.values(validationState).every(Boolean);
                    if (!allValidationsPassed) {
                        isValid = false;
                        errorMessage = errorMessage || 'Please complete all required fields correctly';
                        debugLog('Validation failed: Not all fields valid', validationState);
                    }

                    if (!isValid) {
                        e.preventDefault();
                        alert(errorMessage);
                        debugLog('Form submission prevented due to validation errors');
                        
                        // Scroll to first error
                        const firstInvalidField = document.querySelector('.is-invalid');
                        if (firstInvalidField) {
                            firstInvalidField.scrollIntoView({ behavior: 'smooth', block: 'center' });
                            firstInvalidField.focus();
                        }
                        
                        return false;
                    }

                    // FORM IS VALID - PREPARE DATA FOR SUBMISSION
                    debugLog('Form validation passed, preparing data...');
                    
                    // Update all hidden inputs with final data
                    document.getElementById('servicesInput').value = JSON.stringify(servicesArray);
                    document.getElementById('coverageAreasInput').value = JSON.stringify(selectedCoverageAreas);
                    
                    // Ensure pricing data has proper form field names
                    categories.forEach(checkbox => {
                        const categoryId = checkbox.id;
                        const feeInput = document.getElementById(`fee-${categoryId}`);
                        
                        if (feeInput && feeInput.value) {
                            // Ensure the fee input has the correct name for backend processing
                            if (!feeInput.name) {
                                feeInput.name = `categoryFees[${categoryId}]`;
                            }
                            debugLog(`Fee for ${categoryId}: ${feeInput.value}`);
                        }
                    });
                    
                    debugLog('Form data prepared for submission:', {
                        services: document.getElementById('servicesInput').value,
                        coverageAreas: document.getElementById('coverageAreasInput').value,
                        categoriesSelected: categories.length,
                        availableDays: availableDaysChecked.length
                    });
                    
                    // Show loading state
                    const submitBtn = document.getElementById('submitBtn');
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Registering...';
                    submitBtn.disabled = true;
                    
                    // Form will now submit with all the data
                    return true;
                });
