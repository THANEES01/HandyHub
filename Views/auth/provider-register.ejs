        // Enhanced validation functions - FIXED VERSION
        function validateField(field, showValidation = false) {
            const value = field.value.trim();
            const fieldName = field.name || field.id;
            let isValid = true;
            let message = '';

            // Check if field has been touched
            const hasBeenTouched = touchedFields.has(fieldName);

            // Only proceed with visual validation if explicitly requested AND field has been touched
            if (!showValidation && !hasBeenTouched) {
                // Still update validation state for form progress, but don't show visual feedback
                if (field.hasAttribute('required') && !value) {
                    validationState[fieldName] = false;
                } else if (value) {
                    // Perform silent validation for state tracking
                    switch (fieldName) {
                        case 'businessName':
                            isValid = value.length >= 2 && value.length <= 100 && /^[a-zA-Z0-9\s&'.-]+$/.test(value);
                            break;
                        case 'email':
                            isValid = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/i.test(value);
                            break;
                        case 'phoneNumber':
                            isValid = /^(\+?6?01)[0-46-9]-*[0-9]{7,8}$/.test(value.replace(/\s/g, ''));
                            break;
                        default:
                            isValid = true;
                    }
                    validationState[fieldName] = isValid;
                } else {
                    validationState[fieldName] = false;
                }
                return validationState[fieldName];
            }

            // Reset classes only if field has been touched or validation is explicitly requested
            field.classList.remove('is-valid', 'is-invalid');

            if (field.hasAttribute('required') && !value) {
                isValid = false;
                message = 'This field is required';
            } else if (value) {
                // Field-specific validation
                switch (fieldName) {
                    case 'businessName':
                        if (value.length < 2 || value.length > 100) {
                            isValid = false;
                            message = 'Business name must be 2-100 characters';
                        } else if (!/^[a-zA-Z0-9\s&'.-]+$/.test(value)) {
                            isValid = false;
                            message = 'Business name contains invalid characters';
                        }
                        break;
                    
                    case 'email':
                        const emailRegex = /^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$/i;
                        if (!emailRegex.test(value)) {
                            isValid = false;
                            message = 'Please enter a valid email address';
                        }
                        break;
                    
                    case 'phoneNumber':
                        const phoneRegex = /^(\+?6?01)[0-46-9]-*[0-9]{7,8}$/;
                        if (!phoneRegex.test(value.replace(/\s/g, ''))) {
                            isValid = false;
                            message = 'Please enter a valid Malaysian phone number';
                        }
                        break;
                }
            }

            // Apply visual feedback only if field has been touched or validation is explicitly requested
            if (value && isValid) {
                field.classList.add('is-valid');
                showFieldMessage(field, '', 'valid');
            } else if (!isValid) {
                field.classList.add('is-invalid');
                showFieldMessage(field, message || field.dataset.validationMessage || 'Invalid input', 'invalid');
            }

            // Update validation state
            validationState[fieldName] = isValid && value !== '';
            return isValid;
        }

        function showFieldMessage(field, message, type) {
            const container = field.closest('.field-container');
            if (!container) return;

            const feedbackEl = container.querySelector(`.${type}-feedback`);
            if (feedbackEl) {
                feedbackEl.textContent = message;
                feedbackEl.style.display = message ? 'block' : 'none';
            }
        }

        function validatePassword(field, showValidation = false) {
            const password = field.value;
            const fieldName = field.name || field.id;
            const hasBeenTouched = touchedFields.has(fieldName);
            const strengthBar = document.getElementById('passwordStrengthBar');
            
            let strength = 0;
            let isValid = false;

            // Always update strength bar if there's content, but only if field has been touched
            if (password && hasBeenTouched) {
                // Check password criteria
                const criteria = {
                    length: password.length >= 8,
                    lowercase: /[a-z]/.test(password),
                    uppercase: /[A-Z]/.test(password),
                    number: /\d/.test(password),
                    special: /[@$!%*?&]/.test(password)
                };

                // Calculate strength
                strength = Object.values(criteria).filter(Boolean).length;

                // Set strength bar
                const strengthPercentage = (strength / 5) * 100;
                strengthBar.style.width = strengthPercentage + '%';

                // Set strength class
                let strengthClass = '';
                if (strength <= 2) {
                    strengthClass = 'strength-weak';
                } else if (strength === 3) {
                    strengthClass = 'strength-fair';
                } else if (strength === 4) {
                    strengthClass = 'strength-good';
                } else {
                    strengthClass = 'strength-strong';
                }

                strengthBar.className = `password-strength-bar ${strengthClass}`;
                isValid = Object.values(criteria).every(Boolean);
            } else if (!password) {
                // Reset strength bar if no password
                strengthBar.style.width = '0%';
                strengthBar.className = 'password-strength-bar';
                isValid = false;
            } else {
                // Password exists but field not touched - just validate silently
                const criteria = {
                    length: password.length >= 8,
                    lowercase: /[a-z]/.test(password),
                    uppercase: /[A-Z]/.test(password),
                    number: /\d/.test(password),
                    special: /[@$!%*?&]/.test(password)
                };
                isValid = Object.values(criteria).every(Boolean);
            }

            // Only show validation feedback if field has been touched or explicitly requested
            if ((hasBeenTouched || showValidation) && password) {
                field.classList.remove('is-valid', 'is-invalid');
                if (isValid) {
                    field.classList.add('is-valid');
                    showFieldMessage(field, 'Strong password!', 'valid');
                } else {
                    field.classList.add('is-invalid');
                    showFieldMessage(field, 'Password must meet all requirements', 'invalid');
                }
            } else if ((hasBeenTouched || showValidation) && !password) {
                field.classList.remove('is-valid', 'is-invalid');
                field.classList.add('is-invalid');
                showFieldMessage(field, 'Password is required', 'invalid');
            }

            validationState.password = isValid;
            return isValid;
        }

        function validatePasswordMatch(field, showValidation = false) {
            const password = document.getElementById('password').value;
            const confirmPassword = field.value;
            const fieldName = field.name || field.id;
            const hasBeenTouched = touchedFields.has(fieldName);
            const isValid = password === confirmPassword && confirmPassword !== '';

            // Only show validation if field has been touched or explicitly requested
            if ((hasBeenTouched || showValidation) && confirmPassword) {
                field.classList.remove('is-valid', 'is-invalid');
                if (isValid) {
                    field.classList.add('is-valid');
                    showFieldMessage(field, 'Passwords match!', 'valid');
                } else {
                    field.classList.add('is-invalid');
                    showFieldMessage(field, 'Passwords do not match', 'invalid');
                }
            } else if ((hasBeenTouched || showValidation) && !confirmPassword) {
                field.classList.remove('is-valid', 'is-invalid');
                field.classList.add('is-invalid');
                showFieldMessage(field, 'Please confirm your password', 'invalid');
            }

            validationState.confirmPassword = isValid;
            return isValid;
        }

        function validateFile(fileInput, showValidation = false) {
            const file = fileInput.files[0];
            const fieldName = fileInput.name || fileInput.id;
            const hasBeenTouched = touchedFields.has(fieldName);
            let isValid = false;
            let message = '';

            // Determine if file is valid
            if (file) {
                isValid = true;
                // Check file size (1MB = 1024 * 1024 bytes)
                const maxSize = 1024 * 1024;
                if (file.size > maxSize) {
                    isValid = false;
                    message = 'File size must be less than 1MB';
                }

                // Check file type
                const allowedTypes = ['application/pdf', 'image/jpeg', 'image/jpg', 'image/png'];
                if (isValid && !allowedTypes.includes(file.type)) {
                    isValid = false;
                    message = 'Only PDF, JPG, and PNG files are allowed';
                }
            } else {
                isValid = false;
                message = 'Please select a file';
            }

            // Only show visual feedback if field has been touched or file is selected or validation is explicitly requested
            if ((hasBeenTouched || showValidation || file)) {
                fileInput.classList.remove('is-valid', 'is-invalid');

                if (isValid && file) {
                    fileInput.classList.add('is-valid');
                    showFieldMessage(fileInput, 'File uploaded successfully!', 'valid');
                } else {
                    fileInput.classList.add('is-invalid');
                    showFieldMessage(fileInput, message, 'invalid');
                }
            }

            validationState.certification = isValid;
            return isValid;
        }

        function markFieldAsTouched(fieldName) {
