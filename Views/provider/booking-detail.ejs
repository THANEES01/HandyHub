<!-- views/provider/booking-detail.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Booking #<%= booking.id %> - HandyHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-blue: #0077be;
            --secondary-blue: #00a2e8;
            --dark-blue: #003366;
            --light-blue: #e6f2ff;
            --sidebar-width: 250px;
        }
        
        body {
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .sidebar {
            width: var(--sidebar-width);
            background-color: var(--dark-blue);
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 20px;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 30px;
        }

        .data-card {
            background: white;
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 2px 15px rgba(0,0,0,0.05);
            margin-bottom: 25px;
            border: 1px solid rgba(0,0,0,0.05);
            height: 100%;
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 1px solid #eee;
        }

        .info-group {
            margin-bottom: 20px;
        }

        .info-label {
            font-weight: 600;
            color: var(--dark-blue);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 5px;
        }

        .info-value {
            color: #333;
            font-size: 1.1rem;
        }

        .status-badge {
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 0.9rem;
        }

        .status-Confirmed {
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .status-Pending {
            background-color: #fff3cd;
            color: #856404;
        }
        
        .status-New {
            background-color: #cfe2ff;
            color: #084298;
        }

        .status-Accepted {
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .status-Completed {
            background-color: #cfe2ff;
            color: #084298;
        }

        .sidebar-brand {
            color: white;
            font-size: 1.5rem;
            padding: 20px;
            text-decoration: none;
            display: block;
            margin-bottom: 20px;
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8);
            padding: 12px 20px;
            margin: 4px 0;
            transition: all 0.3s ease;
        }

        .nav-link:hover, .nav-link.active {
            color: white;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-link i {
            margin-right: 10px;
        }

        .img-container {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            margin-top: 20px;
        }

        .issue-image {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin-bottom: 15px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            color: var(--primary-blue);
            font-weight: 500;
            padding: 8px 0;
            transition: all 0.3s ease;
        }

        .back-button:hover {
            color: var(--dark-blue);
        }

        .section-title {
            color: var(--dark-blue);
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .btn-action-custom {
            padding: 14px 28px;
            font-size: 1rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            font-weight: 500;
            margin-top: 15px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-action-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 10px rgba(0,0,0,0.15);
        }

        .btn-accept {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
        }

        .btn-complete {
            background-color: #0d6efd;
            border-color: #0d6efd;
            color: white;
        }

        .booking-action-wrapper {
            display: flex;
            justify-content: flex-start;
            margin-top: 30px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <a href="/provider/dashboard" class="sidebar-brand">
            <i class="bi bi-tools"></i> HandyHub Provider
        </a>
        <nav class="nav flex-column">
            <a class="nav-link" href="/provider/dashboard">
                <i class="bi bi-person"></i> Profile
            </a>
            <a class="nav-link active" href="/provider/bookings">
                <i class="bi bi-calendar-check"></i> Bookings
            </a>
            <a class="nav-link" href="/provider/reviews">
                <i class="bi bi-star"></i> Reviews & Ratings
            </a>
            <a class="nav-link" href="/provider/earnings">
                <i class="bi bi-wallet2"></i> Earnings
            </a>
            <a class="nav-link text-danger" href="/auth/logout">
                <i class="bi bi-box-arrow-right"></i> Logout
            </a>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Header Section -->
        <div class="mb-4">
            <a href="/provider/bookings" class="back-button">
                <i class="bi bi-arrow-left"></i>
                Back to Bookings
            </a>
            <h1 class="h3 mt-3">Booking Details #<%= booking.id %></h1>
        </div>

        <!-- Action Buttons Outside Box -->
        <div class="booking-action-wrapper">
            <% if (booking.status === 'New' || booking.status === 'Pending') { %>
                <form action="/provider/booking/<%= booking.id %>/accept" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-action-custom btn-accept">
                        <i class="bi bi-check-circle-fill"></i>
                        Accept Booking
                    </button>
                </form>
            <% } %>
            
            <% if (booking.status === 'Accepted') { %>
                <form action="/provider/booking/<%= booking.id %>/complete" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-action-custom btn-complete">
                        <i class="bi bi-check-circle-fill"></i>
                        Complete Service
                    </button>
                </form>
            <% } %>
        
            <% if (booking.status === 'Confirmed') { %>
                <form action="/provider/booking/<%= booking.id %>/accept" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-action-custom btn-accept">
                        <i class="bi bi-check-circle-fill"></i>
                        Accept Service
                    </button>
                </form>
            <% } %>
        </div>

        <div class="row">
            <!-- Service Information -->
            <div class="col-md-8">
                <div class="data-card">
                    <div class="card-header">
                        <h2 class="section-title mb-0">Service Information</h2>
                        <span class="status-badge status-<%= booking.status %>">
                            <%= booking.status %>
                        </span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-group">
                                <div class="info-label">Service Type</div>
                                <div class="info-value"><%= booking.service_type %></div>
                            </div>
                            <div class="info-group">
                                <div class="info-label">Time Slot</div>
                                <div class="info-value"><%= booking.time_slot %></div>
                            </div>
                            <div class="info-group">
                                <div class="info-label">Issue Description</div>
                                <div class="info-value"><%= booking.issue_description %></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <div class="info-label">Customer Name</div>
                                <div class="info-value"><%= booking.customer_name %></div>
                            </div>
                            <div class="info-group">
                                <div class="info-label">Customer Phone</div>
                                <div class="info-value"><%= booking.customer_phone %></div>
                            </div>
                            <div class="info-group">
                                <div class="info-label">Customer Email</div>
                                <div class="info-value"><%= booking.customer_email %></div>
                            </div>
                        </div>
                    </div>

                    <div class="info-group mt-3">
                        <div class="info-label">Service Address</div>
                        <div class="info-value"><%= booking.service_address %></div>
                    </div>
                </div>
            </div>

            <!-- Uploaded Photos -->
            <div class="col-md-4">
                <div class="data-card">
                    <h2 class="section-title">Customer Uploaded Photos</h2>
                    <% if (booking.images) { %>
                        <div class="img-container">
                            <% 
                            let imageArray = [];
                            try {
                                // Handle different possible formats of the images data
                                if (typeof booking.images === 'string') {
                                    if (booking.images.startsWith('[') && booking.images.endsWith(']')) {
                                        // If it's a JSON string, parse it
                                        imageArray = JSON.parse(booking.images);
                                    } else {
                                        // If it's a comma-separated string
                                        imageArray = booking.images.split(',').map(img => img.trim()).filter(img => img);
                                    }
                                } else if (Array.isArray(booking.images)) {
                                    // If it's already an array
                                    imageArray = booking.images;
                                }
                            } catch(e) {
                                console.error('Error parsing images:', e);
                            }
                            %>
                            
                            <% if (imageArray && imageArray.length > 0) { %>
                                <% imageArray.forEach(function(image) { %>
                                    <img src="<%= image %>" 
                                         alt="Service Photo" 
                                         class="issue-image"
                                         onerror="this.src='https://via.placeholder.com/300x200?text=Image+Not+Found'"/>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-image fs-1"></i>
                                    <p class="mt-2">No photos available</p>
                                </div>
                            <% } %>
                        </div>
                    <% } else { %>
                        <div class="text-center text-muted py-4">
                            <i class="bi bi-image fs-1"></i>
                            <p class="mt-2">No photos provided</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>